{% extends 'base.html.twig' %}

{% block body %}
    <h1>Activity</h1>

    <table>
        <tbody>
            <tr>
                <th>Id</th>
                <td>{{ activity.id }}</td>
            </tr>
            <tr>
                <th>Name</th>
                <td>{{ activity.name }}</td>
            </tr>
            <tr>
                <th>Name_ru</th>
                <td>{{ activity.nameru }}</td>
            </tr>
            <tr>
                <th>Name_en</th>
                <td>{{ activity.nameen }}</td>
            </tr>
            <tr>
                <th>About</th>
                <td>{{ activity.about }}</td>
            </tr>
            <tr>
                <th>About_ru</th>
                <td>{{ activity.aboutru }}</td>
            </tr>
            <tr>
                <th>About_en</th>
                <td>{{ activity.abouten }}</td>
            </tr>
            <tr>
                <th>Url</th>
                <td>{{ activity.url }}</td>
            </tr>
            <tr>
                <th>Is_activated</th>
                <td>{% if activity.isactivated %}Yes{% else %}No{% endif %}</td>
            </tr>
            <tr>
                <th>Created_at</th>
                <td>{% if activity.createdat %}{{ activity.createdat|date('Y-m-d H:i:s') }}{% endif %}</td>
            </tr>
            <tr>
                <th>Updated_at</th>
                <td>{% if activity.updatedat %}{{ activity.updatedat|date('Y-m-d H:i:s') }}{% endif %}</td>
            </tr>
        </tbody>
    </table>

    <ul>
        <li>
            <a href="{{ path('Front_proj_index') }}">Back to the list</a>
        </li>
        <li>
            <a href="{{ path('Front_proj_edit', { 'id': activity.id }) }}">Edit</a>
        </li>
        <li>
            {{ form_start(delete_form) }}
                <input type="submit" value="Delete">
            {{ form_end(delete_form) }}
        </li>
    </ul>
{% endblock %}
