            <link href="http://fonts.googleapis.com/css?family=Roboto+Condensed:400,300" rel="stylesheet" type="text/css">
            <link href="{{ asset('css/blog.css') }}" rel="stylesheet" />
        {% endblock %}
        {% block javascript %}
            <!-- JS -->
            <script  src="{{ asset('style/js/jquery.min.js') }}" type="text/javascript"></script>
            <script  src="{{ asset('style/js/bootstrap.min.js') }}" type="text/javascript"></script>
            <script  src="{{ asset('style/js/scripts.js') }}" type="text/javascript"></script>
            <!-- Isotope - Portfolio Sorting -->
            <script  src="{{ asset('style/js/jquery.isotope.js') }}" type="text/javascript"></script>
            <!-- Mobile Menu - Slicknav -->
            <script  src="{{ asset('style/js/jquery.slicknav.js') }}" type="text/javascript"></script>
            <!-- Animate on Scroll-->
            <script  src="{{ asset('style/js/jquery.visible.js') }}" type="text/javascript"  charset="utf-8"></script>
            <!-- Sticky Div -->
            <script  src="{{ asset('style/js/jquery.sticky.js') }}" type="text/javascript" charset="utf-8"></script>
            <!-- Slimbox2-->
            <script  src="{{ asset('style/js/slimbox2.js') }}" type="text/javascript" charset="utf-8"></script>
            <!-- Modernizr -->
            <script src="{{ asset('style/js/modernizr.custom.js') }}" type="text/javascript" type="text/javascript"></script>
            <!-- End JS -->
        {% endblock %}
        <link rel="icon" type="image/x-icon" href="{{ asset('favicon.ico') }}" />
    </head>
