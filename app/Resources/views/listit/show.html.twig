{% extends 'base.html.twig' %}

{% block body %}
    <h1>Listit</h1>

    <table>
        <tbody>
            <tr>
                <th>Id</th>
                <td>{{ listit.id }}</td>
            </tr>
            <tr>
                <th>Name</th>
                <td>{{ listit.name }}</td>
            </tr>
            <tr>
                <th>Name_ru</th>
                <td>{{ listit.nameru }}</td>
            </tr>
            <tr>
                <th>Name_en</th>
                <td>{{ listit.nameen }}</td>
            </tr>
            <tr>
                <th>About</th>
                <td>{{ listit.about }}</td>
            </tr>
            <tr>
                <th>About_ru</th>
                <td>{{ listit.aboutru }}</td>
            </tr>
            <tr>
                <th>About_en</th>
                <td>{{ listit.abouten }}</td>
            </tr>
            <tr>
                <th>Locales</th>
                <td>{{ listit.locales }}</td>
            </tr>
            <tr>
                <th>Url</th>
                <td>{{ listit.url }}</td>
            </tr>
            <tr>
                <th>Is_activated</th>
                <td>{% if listit.isactivated %}Yes{% else %}No{% endif %}</td>
            </tr>
            <tr>
                <th>Created_at</th>
                <td>{% if listit.createdat %}{{ listit.createdat|date('Y-m-d H:i:s') }}{% endif %}</td>
            </tr>
            <tr>
                <th>Updated_at</th>
                <td>{% if listit.updatedat %}{{ listit.updatedat|date('Y-m-d H:i:s') }}{% endif %}</td>
            </tr>
            <tr>
                <th>Foto</th>
                <td>{{ listit.foto }}</td>
            </tr>
        </tbody>
    </table>

    <ul>
        <li>
            <a href="{{ path('l_index') }}">Back to the list</a>
        </li>
        <li>
            <a href="{{ path('l_edit', { 'id': listit.id }) }}">Edit</a>
        </li>
        <li>
            {{ form_start(delete_form) }}
                <input type="submit" value="Delete">
            {{ form_end(delete_form) }}
        </li>
    </ul>
{% endblock %}
