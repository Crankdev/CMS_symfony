{% extends 'base.html.twig' %}

{% block body %}
    <h1>Foto</h1>

    <table>
        <tbody>
            <tr>
                <th>Id</th>
                <td>{{ foto.id }}</td>
            </tr>
            <tr>
                <th>Name</th>
                <td>{{ foto.name }}</td>
            </tr>
            <tr>
                <th>Foto</th>
                <td><img src="{{ asset('uploads/imeges/') ~foto.name }}"  width="30%">}</td>
            </tr>

            <tr>
                <th>sizex</th>
                <td>{{ foto.sizex }}</td>
            </tr>
            <tr>
                <th>sizey</th>
                <td>{{ foto.sizey }}</td>
            </tr>
            <tr>
                <th>activety</th>
                <td>{{ foto.activities }}</td>
            </tr>
        </tbody>
    </table>

    <ul>
        <li>
            <a href="{{ path('Front_foto_index') }}">Back to the list</a>
        </li>
        <li>
            {{ form_start(delete_form) }}
                <input type="submit" value="Delete">
            {{ form_end(delete_form) }}
        </li>
    </ul>
{% endblock %}
