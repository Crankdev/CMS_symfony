{% extends 'base.html.twig' %}

{% block body %}
    <h1>Person</h1>

    <table>
        <tbody>
            <tr>
                <th>Id</th>
                <td>{{ person.id }}</td>
            </tr>
            <tr>
                <th>Name</th>
                <td>{{ person.name }}</td>
            </tr>
            <tr>
                <th>Who</th>
                <td>{{ person.who }}</td>
            </tr>
            <tr>
                <th>Name_ru</th>
                <td>{{ person.nameru }}</td>
            </tr>
            <tr>
                <th>Who_ru</th>
                <td>{{ person.whoru }}</td>
            </tr>
            <tr>
                <th>Name_en</th>
                <td>{{ person.nameen }}</td>
            </tr>
            <tr>
                <th>Who_en</th>
                <td>{{ person.whoen }}</td>
            </tr>
            <tr>
                <th>Foto</th>
                <td>{{ person.foto }}</td>
            </tr>
            <tr>
                <th>Mail</th>
                <td>{{ person.mail }}</td>
            </tr>
            <tr>
                <th>Phone</th>
                <td>{{ person.phone }}</td>
            </tr>
            <tr>
                <th>Facebook</th>
                <td>{{ person.facebook }}</td>
            </tr>
        </tbody>
    </table>

    <ul>
        <li>
            <a href="{{ path('people_index') }}">Back to the list</a>
        </li>
        <li>
            <a href="{{ path('people_edit', { 'id': person.id }) }}">Edit</a>
        </li>
        <li>
            {{ form_start(delete_form) }}
                <input type="submit" value="Delete">
            {{ form_end(delete_form) }}
        </li>
    </ul>
{% endblock %}
