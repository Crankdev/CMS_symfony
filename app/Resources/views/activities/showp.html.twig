{% extends 'base.html.twig' %}
{% block title %}

{% endblock %}
{% block body %}
    <h1>Activity</h1>

    <table>
        <tbody>
            <tr>
                <th>Id</th>
                <td>{{ project.id }}</td>
            </tr>
            <tr>
                <th>Name</th>
                <td>{{ project.name }}</td>
            </tr>
            <tr>
                <th>Name_ru</th>
                <td>{{ project.nameru }}</td>
            </tr>
            <tr>
                <th>Name_en</th>
                <td>{{ project.nameen }}</td>
            </tr>
            <tr>
                <th>About</th>
                <td>{{ project.about }}</td>
            </tr>
            <tr>
                <th>About_ru</th>
                <td>{{ project.aboutru }}</td>
            </tr>
            <tr>
                <th>About_en</th>
                <td>{{ project.abouten }}</td>
            </tr>
            <tr>
                <th>project</th>
                <td>
                    {% for activite in project.activites %}
                        <h2>{{ activite.name }}</h2>
                        <img class="margin-bottom-20" src="{{ asset('uploads/imeges/') ~activite.foto[0].name  }}" alt="image1">
                    {% endfor %}
                </td>
            </tr>
        </tbody>
    </table>
{% endblock %}
