{% extends 'base.html.twig' %}
{% block body %}
    {% for activity in activities %}
    <!-- Blog Post -->
    <div class="blog-post padding-bottom-20">
        <!-- Blog Item Header -->
        <div class="blog-item-header">
            <!-- Title -->
            <h2>
                <a href="{{ path('Front_proj_show', { 'id': activity.id }) }}"></a>
                    {{ activity.name }}</a>
            </h2>
            <div class="clearfix"></div>
            <!-- End Title -->
            <!-- Date -->
            <div class="blog-post-date">
                {% if activity.updatedat %}{{ activity.updatedat|date('d/m/Y') }}
                {% else %}{{ activity.createdat|date('d/m/Y') }}
                {% endif %}
            </div>
            <!-- End Date -->
        </div>
        <!-- End Blog Item Header -->
        <!-- Blog Item Details -->
        <div class="blog-post-details">
            <!-- Author Name -->
            <div class="blog-post-details-item blog-post-details-item-left">
                <i class="fa fa-user color-gray-light"></i>
                <a href="#">Admin</a>
            </div>
            <!-- End Author Name -->
            <!-- Tags -->
            <div class="blog-post-details-item blog-post-details-item-left blog-post-details-tags">
                <i class="fa fa-tag color-gray-light"></i>
                <a href="#">Діти</a>,
                <a href="#">Служіння</a>,
                <a href="#"></a>
            </div>
            <!-- End Tags -->
        </div>
        <!-- End Blog Item Details -->
        <!-- Blog Item Body -->
        <div class="blog">
            <div class="clearfix"></div>
            <div class="blog-post-body row margin-top-15">
                <div class="col-md-5">
                        <img class="margin-bottom-20" src="{{ asset('uploads/imeges/') ~activity.foto[0].name }}" alt="image">
                </div>
                <div class="col-md-7">
                    <p>{{ activity.about }}</p>
                    <!-- Read More -->
                    <a href="{{ path('Front_proj_show', { 'id': activity.id }) }}" class="btn btn-primary">
                        Більше
                        <i class="icon-chevron-right readmore-icon"></i>
                    </a>
                    <a href="{{ path('Front_proj_edit', { 'id': activity.id }) }}" class="btn btn-primary">
                        edit
                        <i class="icon-chevron-right readmore-icon"></i>
                    </a>
                    <!-- End Read More -->
                </div>
            </div>
        </div>
        <!-- End Blog Item Body -->
    </div>

    <!-- End Blog Item -->
    {% endfor %}
    <ul>
        <li>
            <a href="{{ path('Front_proj_new') }}">Create a new activity</a>
        </li>
    </ul>
    <!-- Pagination -->
    <ul class="pagination">
        <li>
            <a href="#">&laquo;</a>
        </li>
        <li class="active">
            <a href="#">1</a>
        </li>
        <li>
            <a href="#">2</a>
        </li>
        <li>
            <a href="#">3</a>
        </li>
        <li class="disabled">
            <a href="#">4</a>
        </li>
        <li>
            <a href="#">5</a>
        </li>
        <li>
            <a href="#">&raquo;</a>
        </li>
    </ul>
    <!-- End Pagination -->
{% endblock %}
